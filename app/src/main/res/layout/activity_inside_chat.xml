                    android:textColor="@color/black"
                    android:textSize="12dp"

                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="70dp"
                    android:text="تمام شكرا كدة حياتى بقت احسن بكتير"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/txt_send_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textMultiLine"
            android:hint="Write a message..."
            android:background="@drawable/txt_chat"
            ></EditText>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_upload_photos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="250dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/layout_click"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/uplaod_photo"
            ></ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_rec_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="250dp"
            android:backgroundTint="@color/dark_blue2"
            >


            <ImageView
                android:id="@+id/img_rec_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:src="@drawable/mic"></ImageView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <include
        android:id="@+id/tb"
        layout="@layout/chat_toolbar"/>

</RelativeLayout>